{% extends "_layouts/base" %}

{% block main %}
  {% cache using key "entry__" ~ craft.app.request.pathInfo %}
    {% do craft.app.elements.eagerLoadElements(className(entry), [entry], [""]|merge(eagerLoading.blocks ?? "")) %}

    {% include "_partials/pageHero.twig" with {
      self: entry
    } %}
  {% endcache %}
  {{
    sprig(
      "_sprig/newsPaginate",
      {
        limit: 3,
        section: "news",
        entryUri: entry.uri ?? null,
        template: entry.newsPagination ? "pagination" : "loadmore",
        style: style
      }
    )
  }}
{% endblock %}
