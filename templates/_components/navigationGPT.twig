{# Merge props #}
{% set props = {
  data: data is defined ? defaults.data|merge(data) : defaults.data
} %}

{% if props.data.items %}

    <ul class="{{ props.data.classWrapper }}">
      {% for item in props.data.items %}
        {% set subitems = item.getChildren().collect() ?? null %}
        {% set element = item.navigationLink.getElement() %}
        {% set class = props.data.classLink %}
        {% if element and element.uri == craft.app.request.pathInfo %}
          {% set class = class ~ " " ~ props.data.classLinkActive %}
        {% endif %}
        <li
          {% if not props.data.mobile %}
            x-data="{ open: false }"
            @mouseover="open = true"
            @mouseover.away="open = false"
          {% endif %}
          class="block py-2 px-3 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0 dark:text-white md:dark:hover:text-blue-500 dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent {{ props.data.classItem }}"
        >
          {{
            item.navigationLink.getLink({
              class: class
            })
          }}
          {% if subitems and (subitems|length) %}
            <div id="dropdownNavbar" class="z-10 hidden font-normal bg-white divide-y divide-gray-100 rounded-lg shadow w-44 dark:bg-gray-700 dark:divide-gray-600"></div>
            <ul
              {% if not props.data.mobile %}
                x-cloak
                x-show="open"
                x-transition:enter="transition ease-out duration-200"
                x-transition:enter-start="opacity-0 translate-y-1"
                x-transition:enter-end="opacity-100 translate-y-0"
                x-transition:leave="transition ease-in duration-150"
                x-transition:leave-start="opacity-100 translate-y-0"
                x-transition:leave-end="opacity-0 translate-y-1"
              {% endif %}
              class="py-2 text-sm text-gray-700 dark:text-gray-400 {{ props.data.classSubWrapper }}"
            >
              {% for subitem in subitems %}
                {% set subelement = subitem.navigationLink.getElement() %}
                {% set subclass = props.data.classSubLink %}
                {% if subelement and subelement.uri == craft.app.request.pathInfo %}
                  {% set subclass = subclass ~ " " ~ props.data.classSubLinkActive %}
                {% endif %}
                <li class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white {{ props.data.classSubItem }}">
                  {{
                    subitem.navigationLink.getLink({
                      class: subclass
                    })
                  }}
                </li>
              {% endfor %}
            </ul>
          {% endif %}
        </li>
      {% endfor %}
    </ul>
</div>
{% endif %}
